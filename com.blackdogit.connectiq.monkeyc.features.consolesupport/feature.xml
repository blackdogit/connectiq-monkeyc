<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="com.blackdogit.connectiq.monkeyc.features.consolesupport"
      label="Monkey C Console Support by Black Dog IT"
      version="1.1.0.qualifier"
      provider-name="Black Dog IT">

   <description>
      The console feature adds hyperlinks to the Connect IQ Simulator when this prints program counters to link the the actual sources and functions.
   </description>

   <url>
      <update label="Various Connect IQ and Monkey C tools made by Black Dog IT" url="http://blackdogit.github.io/connectiq-monkeyc/repository"/>
   </url>

   <requires>
      <import plugin="org.eclipse.ui.console"/>
      <import plugin="org.eclipse.ui" version="3.5.0" match="compatible"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.equinox.preferences"/>
      <import plugin="org.eclipse.debug.core"/>
      <import plugin="org.eclipse.jface.text"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="org.eclipse.emf.ecore"/>
      <import plugin="org.eclipse.xtext.xbase.lib"/>
      <import plugin="org.eclipse.emf.ecore.xcore.lib"/>
      <import plugin="com.blackdogit.connectiq.monkeyc.debug" version="1.0.0" match="compatible"/>
      <import plugin="org.eclipse.ui.editors" version="3.8.200" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="com.blackdogit.connectiq.monkeyc.consolesupport"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="com.blackdogit.connectiq.monkeyc.debug"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
